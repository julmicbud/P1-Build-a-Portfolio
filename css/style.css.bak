.top-padding{
	padding-top: 15px;
}

.font{
	font-family: 'Libre Baskerville', serif;
	color: #909090;
}

.displayed-image{
	display: block;
	margin-left: auto;
	margin-right: auto;
}

hr{
	width:100%;
	border: 2px solid #d3d3d3;
}

img,embed,object,video{
	max-width: 100%;
}

/*
 *
 * @media
 *
 */

@media screen and (min-width: 551px) {
  .nav-item {
    display: inline-block;
    text-align: center;
}
 .nav-list {
	display: flex;
}
}
@media screen and (min-width: 1000px){
	.container{width: 1000px;
	margin-left: auto;
	margin-right: auto;
}
}
@media screen and (max-width: 450px){
			h1{font-size: 140%; color: black;}
			h4{font-size: 110%; color: black;}
			h3{font-size: 140%; color: black;}
			p{font-size: 95%; color: black;}
			.footer{font-size: 80%; color: black;}
			}
@media screen and (max-width: 500px){
			h1{font-size: 180%; color: black;}
			h4{font-size: 125%; color: black;}
			h3{font-size: 150%; color: black;}
			p{font-size: 110%; color: black;}
			.footer{font-size: 80%; color: black;}
			}
@media screen and (max-width: 991px) {

  .col-md-2 {
    width: 160px;
}
 .col-md-10 {
}
}

/*
 *
 * Top Level Navigation
 *
 */
 
.nav {
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  padding: 0;
}
.nav-list {
  width: 100%;
  text-transform: uppercase;
  padding: 0;
}
.nav-item {
	width: 25%;
	padding-bottom: 10px;
}
.nav-item a {
  color: #909090;
  font-size: 16px;
  font-family: 'Libre Baskerville', serif;
}
.nav-item a:hover {
  text-decoration: underline;
  color: black;
  font-family: 'Libre Baskerville', serif;
}
ul{
	 list-style: none;
}


